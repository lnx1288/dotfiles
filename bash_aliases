alias vim='vim -O'
alias vi='vim'

alias ll='ls -ahlF'
alias la='ls -A'
alias l='ls -CF'
alias ld='ls -ld'

alias ..='cd ..'
alias ..2='cd ../..'
alias ..3='cd ../../..'

# Github aliases
alias gitcuw="git config user.name \"$WORK_USER\"; git config user.email \"$WORK_EMAIL\""
alias gitcup="git config user.name \"$USER\"; git config user.email \"$EMAIL\""
